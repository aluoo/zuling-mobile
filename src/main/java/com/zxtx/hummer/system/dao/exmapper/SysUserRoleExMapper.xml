<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.zxtx.hummer.system.dao.exmapper.SysUserRoleExMapper">

    <insert id="batchInsert">
        INSERT INTO sys_user_role(user_id, role_id) values
        <foreach item="item" index="index" collection="list"
                 separator=",">
            (#{item.userId},#{item.roleId})
        </foreach>
    </insert>

    <delete id="delByUserId">
        delete
        from sys_user_role
        where user_id = #{userId}
    </delete>

    <select id="selectByEmployeeId" resultType="com.zxtx.hummer.system.domain.SysUserRoleDO">
        SELECT r.id, r.user_id, r.role_id
        from sys_user u,
             sys_user_role r
        where u.user_id = r.user_id
          and u.employee_id = #{employeeId}
    </select>

    <select id="selectByEmIdAndRoleId" resultType="com.zxtx.hummer.system.domain.SysUserRoleDO">
        SELECT r.id,r.user_id,r.role_id from sys_user u , sys_user_role r
        <where>u.user_id=r.user_id
            and u.employee_id=#{employeeId} and r.role_id=#{roleId} limit 1
        </where>
    </select>

</mapper>